<PropertyList>

 <path>stairs.ac</path>
 
 <animation>
	  <type>select</type>	  
	  <condition>
		  <property>sim/multiplay/generic/float[0]</property>		  
	  </condition>
  </animation>

  <animation>
  <type>scale</type>
  <property>sim/multiplay/generic/int[3]</property>
  <offset>1</offset>
  <x-max>1.35</x-max>
  <y-max>1.35</y-max>
  <z-max>1.35</z-max>
  <x-factor>1.35</x-factor>
  <y-factor>1.35</y-factor>
  <z-factor>1.35</z-factor>
 </animation>

 

 <animation>
    <type>translate</type>
    <object-name>escalier_1</object-name>
    <object-name>escalier_0</object-name>
    <property>sim/multiplay/generic/float[0]</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> -2.6 </dep></entry>
      <entry><ind> 1.0 </ind><dep>  0.0 </dep></entry>
    </interpolation>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

 

</PropertyList>
